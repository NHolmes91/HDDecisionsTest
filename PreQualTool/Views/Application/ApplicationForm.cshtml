@model PreQualTool.Models.Applicant

@{
    ViewBag.Title = "Application Form";
}

<h2>Enter your details:</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class ="control-label col-md-2">
                <b>First Name</b>
            </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FirstName)
                    @Html.ValidationMessageFor(model => model.FirstName)
                </div>
</div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Last Name</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SecondName)
                @Html.ValidationMessageFor(model => model.SecondName)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Date of Birth</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateOfBirth)
                @Html.ValidationMessageFor(model => model.DateOfBirth)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Annual Income</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Income)
                @Html.ValidationMessageFor(model => model.Income)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
